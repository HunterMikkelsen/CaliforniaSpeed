@page
@model Speed.Pages.GameModel
@{
    ViewData["Title"] = "Speed";
}
<div id="waiting_for_game">
    <h1>Waiting for game to start</h1>
</div>

<div id="game_div">
    <div class="row">
        <div class="col col-md-2 col-sm-2" style="background-image: url('../lib/cards/card_back.png'); background-repeat: no-repeat; background-size: contain; background-position: center;">
            <h1 id="other_count" class="text-center text-white" style="margin: 50% auto;"></h1>
        </div>
        @for(int i = 0; i < 5; i ++)
        {
            <div class="col col-md-2 col-sm-2">
                <img class="other_hand img-fluid" src="../lib/cards/card_back.png"/>
            </div>
        }
    </div>
    <div class="row">
        <div class="col col-md-2 col-sm-2 offset-2">
            <img id="pick_one" class="img-fluid" src="../lib/cards/card_back.png"/>
        </div>
        <div class="col col-md-2 col-sm-2">
            <img id="play_pile_one" class="img-fluid" src="../lib/cards/card_back.png"/>
        </div>
        <div class="col col-md-2 col-sm-2">
            <img id="play_pile_two" class="img-fluid" src="../lib/cards/card_back.png"/>
        </div>
        <div class="col col-md-2 col-sm-2">
            <img id="pick_two" class="img-fluid" src="../lib/cards/card_back.png"/>
        </div>
    </div>
    <div class="row">
        @for(int i = 0; i < 5; i ++)
        {
            <div class="col col-md-2 col-sm-2">
                <img id="player_hand_@i" class="player_hand img-fluid" src="../lib/cards/card_back.png"/>
            </div>
        }
        <div class="col col-md-2 col-sm-2" style="background-image: url('../lib/cards/card_back.png'); background-repeat: no-repeat; background-size: contain; background-position: center;">
            <h1 id="player_count" class="text-center text-white" style="margin: 50% auto;"></h1>
        </div>
    </div>
</div>


