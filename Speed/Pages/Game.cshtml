@page
@model Speed.Pages.GameModel
@{
    ViewData["Title"] = "Speed";
}

<div>
    <h1>Game</h1>
    <h5>Player One Hand: @Model.PlayerOneHand.Count Cards</h5>
    @foreach(var card in Model.PlayerOneHand)
    {
        <p>@card.Name - @card.Suit - @card.Image</p>
    }

    <h5>Player One Deck: @Model.PlayerOneDeck.Count Cards</h5>
    @foreach(var card in Model.PlayerOneDeck)
    {
        <p>@card.Name - @card.Suit - @card.Image</p>
    }

    <h5>Pick Pile One: @Model.PickPileOne.Count Cards</h5>
