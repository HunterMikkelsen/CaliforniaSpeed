    @foreach(var card in Model.PickPileTwo)
    {
        <p>@card.Name - @card.Suit - @card.Image</p>
    }

    <h5>Player Two Hand: @Model.PlayerTwoHand.Count Cards</h5>
    @foreach(var card in Model.PlayerTwoHand)
    {
        <p>@card.Name - @card.Suit - @card.Image</p>
    }

    <h5>Player Two Deck: @Model.PlayerTwoDeck.Count Cards</h5>
