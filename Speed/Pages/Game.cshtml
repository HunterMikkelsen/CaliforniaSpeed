@page
@model Speed.Pages.GameModel
@{
    ViewData["Title"] = "Speed";
}
<div id="waiting_for_game">
    <h1 class="text-center">Waiting for Opponent to Join Game</h1>
</div>

<div id="game_div">
    <div class="row border border-danger border-3 rounded bg-danger">
        <div class="col col-md-2 col-sm-2" style="background-image: url('../lib/cards/card_back.png'); background-repeat: no-repeat; background-size: contain; background-position: center;">
            <h1 id="other_count" class="text-center text-white" style="margin: 50% auto;"></h1>
        </div>
        @for(int i = 0; i < 5; i ++)
        {
            <div class="col col-md-2 col-sm-2">
                <img class="other_hand img-fluid" src="../lib/cards/card_back.png"/>
            </div>
        }
    </div>
    <div class="row border border-white bg-info">
        <div class="col col-md-2 col-sm-2 offset-2">
            <img id="pick_one" class="img-fluid" src="../lib/cards/card_back.png"/>
        </div>
        <div class="col col-md-2 col-sm-2">
            <div class="dropzone" id="play_pile_one">
                <img id="pile_one" class="img-fluid" src="../lib/cards/card_back.png"/>
            </div>
        </div>
        <div class="col col-md-2 col-sm-2">
            <div class="dropzone" id="play_pile_two">
                <img id="pile_two" class="img-fluid" src="../lib/cards/card_back.png"/>
            </div>
        </div>
        <div class="col col-md-2 col-sm-2">
            <img id="pick_two" class="img-fluid" src="../lib/cards/card_back.png"/>
        </div>
    </div>
    <div class="row border border-success border-3 rounded bg-success">
        @for(int i = 0; i < 5; i ++)
        {
            <div class="col col-md-2 col-sm-2">
                <p class="drag" id="@i">
                    <img id="my_hand_@i" class="player_hand img-fluid" src="../lib/cards/card_back.png"/>
                </p>
            </div>
        }
        <div class="col col-md-2 col-sm-2" style="background-image: url('../lib/cards/card_back.png'); background-repeat: no-repeat; background-size: contain; background-position: center;">
            <h1 id="player_count" class="text-center text-white" style="margin: 50% auto;"></h1>
        </div>
    </div>
</div>

<!-- partial -->
<script src='~/js/signalr/dist/browser/signalr.js'></script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
<script src='https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js'></script>
<script src="~/js/gameQuery.js"></script>